<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CountersNormal" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/gray</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:textColorTertiary">@color/light_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
    </style>

    <style name="Theme.CountersWelcome" parent="Theme.CountersNormal">
        <item name="android:windowBackground">@color/welcome_background</item>
    </style>

    <!-- region Heading -->

    <!-- region Heading 5 -->
    <style name="TextAppearance.Counter.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">22sp</item>
        <item name="lineHeight">26sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.Counter.Headline5.Bold">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextAppearance.Counter.Headline5.White">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- endregion Heading 5 -->

    <!-- region Heading 6 -->
    <style name="TextAppearance.Counter.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">22sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.Counter.Headline6.Bold">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextAppearance.Counter.Headline6.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextAppearance.Counter.Headline6.Gray.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextAppearance.Counter.Headline6.White">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- endregion Heading 6 -->
    <!-- endregion Heading -->

    <!-- region Body -->

    <!-- region Body 1 -->
    <style name="TextAppearance.Counter.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.Counter.Body1.Bold" parent="TextAppearance.Counter.Body1">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextAppearance.Counter.Body1.White" parent="TextAppearance.Counter.Body1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Counter.Body1.Gray" parent="TextAppearance.Counter.Body1">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextAppearance.Counter.Body1.Gray.Bold" parent="TextAppearance.Counter.Body1.Gray">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <!-- endregion Body 1 -->

    <!-- region Body 2 -->
    <style name="TextAppearance.Counter.Body2" parent="TextAppearance.Counter.Body1">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="TextAppearance.Counter.Body2.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>
    <!-- endregion Body 2 -->

    <!-- endregion Body -->

    <style name="TextAppearance.Counter.Share" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- region Buttons -->

    <style name="Counter.Widget.Button.Primary.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Counter.Body1.Bold</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Counter.Widget.Button.Primary.Text.Body2" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Counter.Body2</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Counter.Widget.Button.Primary.Text.Body2.Bold" parent="Counter.Widget.Button.Primary.Text.Body2">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Counter.Widget.Button.Floating" parent="Widget.MaterialComponents.Button">
        <item name="iconTint">@color/white</item>
        <item name="cornerRadius">22dp</item>
        <item name="android:inset">@dimen/space_8</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/button_text_color_white_selector</item>
        <item name="android:minHeight">44dp</item>
        <item name="backgroundTint">@color/orange_button_color_selector</item>
        <item name="elevation">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- endregion Buttons -->

    <style name="Counter.Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:minHeight">52dp</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Counter.Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/orange_87</item>
        <item name="boxStrokeColor">@color/orange</item>
        <item name="hintTextColor">@color/orange_87</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="Counter.ActionModeCloseButtonStyle" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:tint">@color/orange</item>
    </style>

    <style name="Counter.Widget.Floating.TextInput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawablePadding">@dimen/space_16</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>
</resources>
